{
  "name": "natours",
  "version": "1.0.0",
  "description": "Primer proyecto del curso Advanced CSS and SASS de udemy",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "img:cp": "cpy 'src/img/*.*' 'dist/img/'",
    "img:watch": "onchange -f 'add change' 'src/img/**/*.*' -- cpy '**/*.*' '../../dist/img/' --cwd=src/img --parents",
    "html:cp": "cpy '**/*.html' '../dist/' --cwd=src --parents",
    "html:watch": "onchange -f 'add change' 'src/**/*.html' -- cpy '**/*.html' '../dist/' --cwd=src --parents",
    "sass": "node-sass-chokidar ./src/scss -o ./dist/css --watch",
    "sass:build": "node-sass-chokidar ./src/scss -o ./dist/css",
    "server": "browser-sync start --server './dist' --files './dist/**/*' --no-open",
    "dev": "concurrently \"npm:img:watch\" \"npm:html:watch\" \"npm:sass\" \"npm:server\""
  },
  "dependencies": {},
  "devDependencies": {
    "node-sass-chokidar": "^1.3.4",
    "browser-sync": "^2.26.5",
    "onchange": "^6.0.0",
    "concurrently": "^4.1.0",
    "sync-glob": "^1.4.0",
    "cpy-cli": "^2.0.0"
  },
  "author": "",
  "license": "ISC"
}
